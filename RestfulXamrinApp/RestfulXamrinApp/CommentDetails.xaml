<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestfulXamrinApp.CommentDetails">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="name" Text="{Binding name}"> </Entry>
            <Entry Placeholder="email" Text="{Binding email}"></Entry>
            <Editor Text="{Binding body}" Placeholder="body"></Editor>
            <Button x:Name="btn1" Clicked="Btn1_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>